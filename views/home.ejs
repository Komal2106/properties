<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        body{
            margin: 0;
            padding: 0;
            background-color: rgb(250, 250, 235);
        }
    nav{
       
        background-color: rgb(175, 213, 244);
        height: 50px;
        color: white;
        text-align: right;
        padding-right: 200px;
        padding-top: 20px;
        font-size: 18px;
    }
    div{
        display: flex;
        flex-direction: column;
        /* border: 2px solid black;  */
        /* width: 60%;  */
        align-items: center;
        /* justify-content: center; */

    }
    ul{
        list-style-type: none;
    }
    img{
        width: 300px;
        height: 200px;
    }
    h1{
        text-align: center;
    }
    </style>

</head>

<body>
    <nav>
        <a href="/">Home | </a>
        <a href="/add"> Add Property</a>
    </nav>


    <h1>Properties for Rent</h1>

    <ul>
        <% properties.forEach( property => {%>
        <li>
            <div>
            <img src = "<%=property.image%>"/>
            <p>Address: <%=property.address%></p>
            <p>Rent: <%=property.rent%></p>
            <p>Type: <%=property.type%></p>
            <p>Owner Phone: <%=property.ownerPhone%></p>
            <button>
                <a href="/update/<%= property._id %>">Update Property</a>
            </button><br/><br/>
            <button>
                <a href="/delete/<%= property._id %>">Delete Property</a>
            </button><br/><br/>
            </div>
        </li>
        <%});%>
    </ul>

    
           

  
    


</body>
</html>